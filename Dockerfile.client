#Stage 0 - Build Frontend Assets
FROM node:12.21.0-alpine

WORKDIR /app-client
COPY package*.json ./
RUN npm install --silent
COPY . .
EXPOSE 3000
RUN apk update
RUN apk --no-cache add curl
RUN apk add bash
RUN curl -sSO https://dl.google.com/cloudagents/install-monitoring-agents.sh
RUN bash install-monitoring-agent.sh
CMD ["npm", "start"]
